<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="android.support.wearable.view.DelayedConfirmationView"
    android:layout_width="match_parent" android:gravity="center"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="it.tiwiz.lumos.skeleton.TimerWearActivity" tools:deviceIds="wear_square">

    <android.support.wearable.view.DelayedConfirmationView
        android:id="@+id/delayed_confirm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_full_cancel"
        android:foregroundGravity="center"
        android:background="@drawable/timer_button"
        app:circle_border_color="@color/blue"
        app:circle_border_width="4dp"
        app:circle_radius="16dp">
    </android.support.wearable.view.DelayedConfirmationView>
</LinearLayout>
